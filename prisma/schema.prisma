generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id    Int    @id @default(autoincrement())
  nom String
  prenom String
  email String  @unique 
  password String
  emailConfirmed Boolean @default(false)
  confirmationToken String 

  posts Post[]
}

model Post {
  id       Int  @id @default(autoincrement())
  avis String
  rate Int

  author   User @relation(fields: [authorId], references: [id])
  authorId Int
}